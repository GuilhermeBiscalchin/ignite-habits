// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//As tabelas que vai ser usadas no schema do prisma.
//Suporta vários bancos de dados - Mongo, SQL

model Habit {
  id         String          @id @default(uuid())
  title      String
  created_at DateTime
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]

  //maneira que crio a tabela, coloca um principal e criar uma tabela com o nome no plural
  @@map("habits")
}

model Day {
  id String @id @default(uuid())

  date      DateTime // para ser criado apenas quando concluir umas das tarefas.
  dayHabits DayHabit[]

  // indices para busca.
  @@unique([date])
  @@map("days")
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int

  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model DayHabit {
  id String @id @default(uuid())

  day_id   String // id do dia
  habit_id String // id do habito, tabela pivô

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id])
  @@map("day_habits")
}
